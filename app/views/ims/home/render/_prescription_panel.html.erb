<div class="detail_panel" v-for="(info,index) in detail" style="height:calc(100% - 30px)">
	<div class="el-row">
		<div class="el-col-12">订单号：{{info.order_code}}</div>
		<div class="el-col-12">日期：{{info.created_at}}</div>
	</div>
	<div class="el-row">
		<div>医院：{{info.source_org_name}}</div>
	</div>
	<div class="el-row">
		<div class="el-col-5">姓名：{{info.patient_name}}</div>
		<div class="el-col-5">性别：{{info.patient_sex}}</div>
		<div class="el-col-5">年龄：{{info.patient_age}}</div>
		<div class="el-col-5">电话：{{info.patient_phone}}</div>
		<div class="el-col-4"></div>
	</div>
  <el-table
    :data="info.details"
    border
    style="width: 100%">
    <el-table-column
      prop="name"
      label="药品名称">
    </el-table-column>
    <el-table-column
      prop="specifications"
      label="规格">
    </el-table-column>
    <el-table-column
      prop="firm"
      label="厂家">
    </el-table-column>
    <el-table-column
      prop="quantity"
      label="数量">
    </el-table-column>
    <el-table-column
      prop="price"
      label="单价">
    </el-table-column>
    <el-table-column
      prop="net_amt"
      label="金额">
    </el-table-column>
  </el-table>

  <div style="text-align:right;">合计：{{info.amt}}</div>

  <div class="el-row" style="padding-top:12px;">
  	<div class="el-col-12">发票：</div>
    <div class="el-col-12 btns" style="text-align:right;">
      <span v-if="info.is_order&&info.status === '1'">
        <button type="button" class="el-button el-button--danger el-button--mini" v-on:click="out_order(info.order_id)">收费并发药</button>
      </span>
      <span v-if="info.is_order&&info.status === '1'">
        <button type="button" class="el-button el-button--danger el-button--mini" v-on:click="charging_pre(info.order_id)">收费</button>
      </span>
      <span v-if="info.is_order&&info.status === '2' ">
        <button type="button" class="el-button el-button--danger el-button--mini" v-on:click="out_order(info.order_id)">发药</button>
      </span>      
    	<!-- <button type="button" class="el-button el-button--danger el-button--mini" v-on:click="out_order(info.order_id)">发药</button> -->
    </div>
  </div>

  <div class="detail_panel_pres">
	  <el-tabs v-model="activeName2" type="card">
	    <el-tab-pane v-for="(pre,index) in info.pres" v-bind:name="pre.index" v-bind:label="pre.type">
        <%= render "ims/home/render/prescription_form"%>
      </el-tab-pane>
	  </el-tabs>
  </div>

</div>