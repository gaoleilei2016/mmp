<div clas="el-col-20" style="height:calc(100% - 120px);">
<div class="el-row" style="float:left; width:100%;">
  <el-row style="padding:8px; border-bottom:1px solid #ddd;">
  	<el-col :span="4" style="width:60px;"><i class="fa fa-cogs fa-fw fa-3x"></i></el-col>
  	<el-col :span="10"><h3>药店设置</h3></el-col>
		<el-col :span="10" style="text-align:right;position: absolute;bottom: 4px;right: 12px;">
		  <!-- <el-form-item> -->
		    <el-button id="submit_btn" size="small" type="primary" v-on:click="setting_form_submit()">提交</el-button>
		  <!-- </el-form-item> -->
		</el-col>  	
	</el-row>

	<el-form size="mini" style="padding-top:8px;" id="setting_form" :rules="setting_rules" :model="setting_form" ref="settingForm" label-width="100px" url="/ims/settings/save_settings" method="post">
		<el-row>
	  	<el-col :span="18">
	  		<el-form-item
			    label="付费未取药过期天数"
			    prop="payment_expired">
			    <el-input v-model="setting_form.payment_expired" auto-complete="off" name="ims_setting[payment_expired]">
				    <template slot="append">天</template>
				  </el-input>
			  </el-form-item>

			<el-form-item
			    label="未支付订单过期天数"
			    prop="unpaid_expired">
			    <el-input v-model="setting_form.unpaid_expired" auto-complete="off" name="ims_setting[unpaid_expired]">
				    <template slot="append">天</template>
				  </el-input>
			  </el-form-item>

			  <el-form-item
			    label="语音提示"
			    prop="voice">
			  	<el-select v-model="setting_form.voice" value-key="code" placeholder="请选择" name="ims_setting[voice_prompts]">
				    <el-option
				      v-for="item in boolean_options"
				      :key="item.value"
				      :label="item.label"
				      :value="item.value">
				    </el-option>
				  </el-select>
			  </el-form-item>

			</el-col>

		</el-row>
	</el-form>
</div>
</div>