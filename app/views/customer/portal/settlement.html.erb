						$('#common_mask,#xxxxx5').hide(200);
						_this.reset_form();
					},
					complete:function() {
						$("#loading").hide();
					},
					error:error_fun,
				})
			},
			delete_taitou:function(e,item) {
				var _this = this;
				$("#loading").show();
				$.ajax({
					url:'/customer/fapiao/'+item.id,
					type:'delete',
					success:function(json) {
						_this.get_fapiaos();
						mui.toast(json.info);
					},
					complete:function() {
						$("#loading").hide();
					},
					error:error_fun,
				})
				e.stopPropagation();
				return false;
			}
		},
