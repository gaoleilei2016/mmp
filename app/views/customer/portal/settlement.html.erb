				type_code:'1',
				default:true,
			},
		},
		methods:{
			click_fapiao_item:function(item) {
				var _this = this;
				if (_this.edit_card) {
					_this.ruleForm = _.cloneDeep(item);
				}else{
					current_app.fapiao = item;
					$('#common_mask,#xxxxx5').hide(200);
				}
			},
			f_type_code_label:function(code) {
				if (code=='1') {
					return '企业';
				}else if(code=='2'){
					return '个人';
				}
			},
			get_fapiaos:function() {
				var _this = this;
				$("#loading").show();
				$.ajax({
					url:'/customer/fapiao',
					success:function(json) {
						_this.fapiaos = json.rows;
					},
					complete:function() {
						$("#loading").hide();
					},
					error:error_fun,
				})
			},
			get_default_fapiao:function() {
				var _this = this;
				$("#loading").show();
