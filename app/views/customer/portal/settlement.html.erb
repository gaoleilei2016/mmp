					success:function(json) {
						current_app.fapiao = json.fapiao;
					},
					complete:function() {
						$("#loading").hide();
					},
					error:error_fun,
				})
			},
			reset_form:function() {
				this.ruleForm = {
					type_code:'1',
					default:true,
				};
			},
			save_taitou:function() {
				var _this = this;
				if(!_this.ruleForm.name){
					mui.toast('名称不能为空');
					return false;
				}
				if(_this.ruleForm.type_code=='1'&&(!_this.ruleForm.shuihao)){
					mui.toast('税号不能为空');
					return false;
				}
				if (_this.ruleForm.type_code=='2') {
					_this.ruleForm.shuihao = '';
				}
				$("#loading").show();
				$.ajax({
					url:'/customer/fapiao',
