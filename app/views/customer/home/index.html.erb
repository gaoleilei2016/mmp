				content:'',
				// contact:'',
				score:'',
			}
		},
		methods:{
			submit_form:function() {
				if (!this.ruleForm.content) {
					mui.toast("请填写您的描述");
					return false;
				}
				if (!this.ruleForm.score) {
					mui.toast("请选择您心目中的评分 ^v^");
					return false;
				}
				$("#feedback_form").submit();
			}
		},
		mounted:function() {
			var _this = this;
			//应用评分
			mui('.icons').on('drag','i',function(e){
				var index = parseInt(this.getAttribute("data-index"));
				var parent = this.parentNode;
				var children = parent.children;
				index += parseInt(e.detail.deltaX/22);
				index<0 && (index=0);
				index>children.length && (index=children.length);
				for(var i=0;i<index;i++){
					children[i].classList.remove('mui-icon-star');
					children[i].classList.add('mui-icon-star-filled');
				}
				for (var i = index; i < 5; i++) {
					children[i].classList.add('mui-icon-star')
					children[i].classList.remove('mui-icon-star-filled')
				}
				starIndex = index;
				_this.ruleForm.score = index;
			});
			//应用评分
			mui('.icons').on('tap','i',function(){
				var index = parseInt(this.getAttribute("data-index"));
				var parent = this.parentNode;
				var children = parent.children;
				if(this.classList.contains("mui-icon-star")){
					for(var i=0;i<index;i++){
						children[i].classList.remove('mui-icon-star');
						children[i].classList.add('mui-icon-star-filled');
					}
				}else{
					for (var i = index; i < 5; i++) {
						children[i].classList.add('mui-icon-star')
						children[i].classList.remove('mui-icon-star-filled')
					}
				}
				starIndex = index;
				_this.ruleForm.score = index;
			});
			//选择快捷输入
			mui('#feedback .mui-popover').on('tap','li',function(e){
				document.getElementById("question").value = document.getElementById("question").value + this.children[0].innerHTML + "\n";
				mui('#feedback .mui-popover').popover('toggle')
			}) 
		}
	})
</script>
