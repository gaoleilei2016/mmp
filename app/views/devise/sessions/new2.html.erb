  <div class="mui-content-padded" style="margin: 10px 80px;">
    <button onclick="$('form').submit();" class="mui-btn mui-btn-block mui-btn-primary common_bg_green" style="border: 0;border-radius: 16px;padding: 4px;">登录</button>
    <div class="link-area">
      <a href="javascript:;" onclick="location.href='/users/sign_up?forget_password=true&login='+$('#login_input').val()" style="font-size: 12px;">忘记密码?</a>
