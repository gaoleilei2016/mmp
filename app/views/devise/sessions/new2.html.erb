<div class="mui-content">
  <div style="text-align: center;margin: 70px 0 0px;">
    <img src="/assets/admin/TM.png" style="width: 100px;"/>
  </div>
  <div style="padding: 30px;">
    <form id='login-form' class="mui-input-group" action="/users/sign_in" method="post">
      <input type="hidden" name="user[remember_me]" value="1">
      <div class="mui-input-row">
        <span class="mui-icon mui-icon-phone" style="font-size: 20px; position: absolute; z-index: 1; top: 10px; left: 0; width: 38px; height: 38px; text-align: center; color: #999; "></span>
        <input autofocus type="number" oninput="if(value.length>11)value=value.slice(0,11)" id="login_input" name="user[login]" class="mui-input-clear mui-input" placeholder="手机号" value="<%= flash[:login] %>" style="padding-left: 40px;font-size: 16px;" autocomplete="off">
      </div>
      <div class="mui-input-row">
        <span class="mui-icon mui-icon-locked" style="font-size: 20px; position: absolute; z-index: 1; top: 10px; left: 0; width: 38px; height: 38px; text-align: center; color: #999; "></span>
        <input type="password" maxlength="16" name="user[password]" class="mui-input-clear mui-input" placeholder="密码" style="padding-left: 40px;font-size: 16px;">
      </div>
    </form>
  </div>
