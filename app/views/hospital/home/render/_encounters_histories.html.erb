<el-table
	:data="histories"
	class="histories-table thiner-row"
	ref="historiesTable"
	style="width: 100%">
  <el-table-column
    min-width="120"
    label="患者">
    <template slot-scope="scope">
      <span v-if="scope.row.name" style="display: inline-block; width: 70px;">{{ scope.row.name }}</span>&#12288;
      <i v-html="judgeGender(scope.row.gender&&scope.row.gender.display)"></i>&#12288;
      <span v-if="scope.row.age">{{ scope.row.age }}岁</span>
    </template>
  </el-table-column>
  <el-table-column
    min-width="100"
    label="过敏">
    <template slot-scope="scope">
    	<el-tag v-for="(tag,index) in (scope.row.allergens||[])" :key="index" size="mini" type="info">{{tag}}</el-tag>
    </template>
  </el-table-column>
  <el-table-column
    min-width="250"
    label="诊断">
    <template slot-scope="scope">
      <el-tag v-for="(tag,index) in (scope.row.diagnoses||[])" :key="index" size="mini" type="info">{{tag.display}}</el-tag>
    </template>
  </el-table-column>
  <el-table-column
    prop="phone"
    min-width="120"
    align="center"
    label="手机号码">
  </el-table-column>
  <el-table-column
    min-width="140"
    align="center"
    label="就诊日期">
    <template slot-scope="scope">
    	<i class="el-icon-time"></i> {{ scope.row.created_at | formatDate }}
    </template>
  </el-table-column>
  <el-table-column
    min-width="60"
    align="center"
    label="药品">
    <template slot-scope="scope">
      <el-tooltip content="查看药品详情" placement="bottom" effect="light">
        <el-button v-if="scope.row.orders_count>0" size="mini" type="primary" @click="openHisOrdersDialog(scope.row)" plain>{{scope.row.orders_count}} 个</el-button>
        <span v-else>0 个</span>
      </el-tooltip>
    </template>
  </el-table-column>
  <el-table-column
    min-width="60"
    align="center"
    label="处方">
    <template slot-scope="scope">
      <el-tooltip content="查看处方详情" placement="bottom" effect="light">
        <el-button v-if="scope.row.prescriptions_count>0" size="mini" type="success" @click="openHisPresDialog(scope.row)" plain>{{scope.row.prescriptions_count}} 张</el-button>
        <span v-else>0 张</span>
      </el-tooltip>
    </template>
  </el-table-column>
<!--   <el-table-column
    min-width="60"
    align="right"
    label="总金额">
    <template slot-scope="scope">
      60.00
    </template>
  </el-table-column>
  <el-table-column
    min-width="60"
    align="right"
    label="缴费金额">
    <template slot-scope="scope">
      30.00
    </template>
  </el-table-column> -->
</el-table>

<el-dialog
  title="药品列表"
  :visible.sync="isShowHisOrdersDialog"
  width="90%">
  <el-table
    :data="encorders"
    @selection-change="handleHisOrdersSelChange"
    class="encorders-table thiner-row"
    style="width: 100%">
    <%= render "hospital/home/render/orders_table_common.html" %>
    <el-table-column
      fixed="right"
      label=""
      width="80">
      <template slot-scope="scope">
        <el-button type="text" size="mini" @click="quoteOrders([scope.row], 'modal')">引用<i class="fa fa-spinner fa-spin fa-fw fa-lg" style="display: none;"></i></el-button>
      </template>
    </el-table-column>
  </el-table>
  <span slot="footer" class="dialog-footer">
    <el-button @click="isShowHisOrdersDialog = false" size="mini">关 闭</el-button>
    <el-button type="primary" @click="quoteOrders(multipleHisOrdersSelection,'batch')" size="mini">引 用<i class="fa fa-spinner fa-spin fa-fw fa-lg" style="display: none;"></i></el-button>
  </span>
</el-dialog>

<el-dialog
  title="处方列表"
  :visible.sync="isShowHisPresDialog"
  width="90%">
  <el-table
    :data="prescriptions"
    class="prescriptions-table thiner-row"
    style="width: 100%">
    <%= render "hospital/home/render/prescriptions_table_common.html" %>
    <el-table-column
      fixed="right"
      label=""
      width="80">
      <template slot-scope="scope">
        <el-button type="text" size="mini" @click="quoteOrders(scope.row.orders, 'modal')">引用药品<i class="fa fa-spinner fa-spin fa-fw fa-lg" style="display: none;"></i></el-button>
      </template>
    </el-table-column>
  </el-table>
  <span slot="footer" class="dialog-footer">
    <el-button @click="isShowHisPresDialog = false" size="mini">关 闭</el-button>
  </span>
</el-dialog>