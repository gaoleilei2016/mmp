						  v-for="tag in encounter.allergens"
						  size="medium"
						  closable
						  :disable-transitions="false"
						  @close="handleCloseTag(tag)">
						  {{tag}}
						</el-tag>
						<el-input
						  class="input-new-tag"
						  v-if="inputTagVisible"
						  v-model="inputTagValue"
						  ref="saveTagInput"
						  placeholder="过敏"
						  style="width: 100px;"
