				  </el-form-item>
				  <div v-if="showAllPatInfo">
					  <el-form-item
					    label="职业"
					    prop="occupation">
					    <el-select v-model="encounter.occupation" value-key="code" placeholder="请选择" style="width: 100%;" :filter-method="filterCodes" @focus="focusSelect='occupations|encoccupation'" ref="encoccupation" filterable>
						    <el-option
						      v-for="item in (occupations||[])"
						      :key="item.code"
						      :label="item.display"
						      :value="item">
						    </el-option>
						  </el-select>
					  </el-form-item>
					</div>
				</el-col>
				<el-col :span="7">
				  <el-form-item
				    label="住址"
				    prop="address">
				    <el-input v-model="encounter.address" prefix-icon="el-icon-location-outline" :disabled="disabledInput"></el-input>
				  </el-form-item>
				  <el-form-item
				    :label="encounter.age < 14 ? '监护人' : '联系人'"
				    prop="contact_name">
				    <el-input v-model="encounter.contact_name" prefix-icon="fa fa-chain"></el-input>
				  </el-form-item>
				  <div v-if="showAllPatInfo">
					  <el-form-item
					    label="工作单位"
					    prop="unit_name">
					    <el-input v-model="encounter.unit_name"></el-input>
					  </el-form-item>
				  </div>
				</el-col>
			</el-row>
